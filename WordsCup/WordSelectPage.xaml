<Window x:Class="WordsCup.WordSelectPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordsCup"
        mc:Ignorable="d"
        Title="WordSelectPage" Height="450" Width="800">
    <Grid Background="#FF028B72">
        <Label Content="Выбери:" HorizontalAlignment="Left" Margin="174,153,0,0" VerticalAlignment="Top" FontSize="17"/>
        <Button Height="50" Margin="256,211,270,174" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" CornerRadius="15">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            Поехали
        </Button>
        <ComboBox HorizontalAlignment="Left" Margin="285,158,0,0" VerticalAlignment="Top" Width="237" Height="27"/>


    </Grid>
</Window>
