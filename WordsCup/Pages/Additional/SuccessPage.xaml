<Window x:Class="WordsCup.SuccessPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordsCup"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="SuccessPage" Height="200" Width="200">
    
    <Grid>
        <DockPanel Margin="30 20" >
            <Image x:Name="img" DockPanel.Dock="Top" Width="100" Height="100" Margin="10"/>
            <Button DockPanel.Dock="Bottom" Height="30" Width="140" VerticalAlignment="Bottom" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                Хорошо</Button>
            
        </DockPanel>
    </Grid>
</Window>
